import * as Model from './comparisons-model.js';
import * as View from './comparisons-view.js';
import * as GlobalView from '../view.js';

export const init = async (container) => {
    View.renderPage(container);
    View.showLoading(true);

    try {
        const comparisonData = await Model.getComparisonData();
        View.renderComparisonTable(comparisonData);
    } catch (error) {
        GlobalView.showMessage('Failed to load comparison data.');
        console.error("Error fetching comparison data:", error);
    } finally {
        View.showLoading(false);
    }
};